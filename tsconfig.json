{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": ["es2018"],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "lib",
      "preserveConstEnums": true,
      "removeComments": false,
      "sourceMap": true,
      "target": "es2018",
      "declaration": true
    },
    "exclude": [
      "lib",
      "gulpfile.*",
      "node_modules/*"
    ]
  }
  